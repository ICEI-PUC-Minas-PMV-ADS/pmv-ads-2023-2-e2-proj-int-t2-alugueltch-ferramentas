@model MVC.Models.Ferramentum

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />

<div class="container-fluid position-fixed">
    <div class="row flex-nowrap">
        @Html.Partial("_SidebarComponent")

        <div class="col-8 container-fluid py-3 container-fluid">
            <div class="py-3 table-bg">
                <h3>Excluir Ferramenta do Sistema</h3>
                <h3>Tem certeza? Essa ação não pode ser revertida.</h3>
                <hr />
                <dl class="col-6">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Marca)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Marca)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Quantidade)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Situacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Situacao.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ValorDiaria)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ValorDiaria)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ValorCompra)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ValorCompra)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FuncionarioCadastroFuncionalNavigation)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FuncionarioCadastroFuncionalNavigation.Nome)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Tipo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Tipo.Nome)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Codigo" />
                    <a class="btn btn-custom-secondary" asp-action="Index">Voltar</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>

    </div>
</div>
