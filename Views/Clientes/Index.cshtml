@model IEnumerable<MVC.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />


<div class="container-fluid position-fixed">
    <div class="row flex-nowrap">
        @Html.Partial("_SidebarComponent")


        <div class="col-8 container-fluid py-3 container-fluid">
            <div class="py-3 table-bg">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                Endereço
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>

                            <th>
                                Telefone
                            </th>
                            <th>
                                Ultimo Aluguel
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Endereco.Logradouro),@Html.DisplayFor(modelItem => item.Endereco.Numero),@Html.DisplayFor(modelItem => item.Endereco.Bairro)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefone)
                                </td>
                                <td>
                                    Em desenvolvimento
                                </td>


                                <td>
                                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id, cpf=item.Cpf  }) |
                                    @Html.ActionLink("Details", "Details", new {id=item.Id, cpf=item.Cpf  }) |
                                    @Html.ActionLink("Delete", "Delete", new { id=item.Id, cpf=item.Cpf  })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>