@model MVC.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/funcionarios.css" asp-append-version="true" />


<div class="container-fluid position-fixed">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-custom-dark-grey">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <div class="bg-custom-dark-grey">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <img src="~/assets/img/alugueltechlogo2.svg" class="fs-5 d-none d-sm-inline max-width-200"></img>
                    </a>
                </div>

                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start sidebar-ul" id="menu">
                    <li class="nav-item">
                        <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-person-circle"></i> <span class="ms-1 d-none d-sm-inline">Clientes</span>
                        </a>
                        <ul class="collapse nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                            <li class="w-100">
                                <a href="#" class="nav-link px-0 bi-person-add"> <span class="d-none d-sm-inline">Novo Cliente</span></a>
                            </li>
                            <li>
                                <a href="#" class="nav-link px-0 bi-person-vcard-fill"> <span class="d-none d-sm-inline">Ver Clientes</span></a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-basket3-fill"></i> <span class="ms-1 d-none d-sm-inline">Alugar</span>
                        </a>
                        <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                            <li class="w-100">
                                <a href="#" class="nav-link px-0 bi-file-earmark-plus"> <span class="d-none d-sm-inline">Novo Orçamento</span></a>
                            </li>
                            <li>
                                <a href="#" class="nav-link px-0 bi-file-text"> <span class="d-none d-sm-inline">Ver Orçamentos</span></a>
                            </li>
                            <li>
                                <a href="#" class="nav-link px-0 bi-bag-check"> <span class="d-none d-sm-inline">Ver Aluguéis</span></a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
                            <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Relatórios</span>
                        </a>
                        <ul class="collapse nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
                            <li class="w-100">
                                <a href="#" class="nav-link px-0 bi-currency-dollar"> <span class="d-none d-sm-inline">Faturamento Mensal</span></a>
                            </li>
                            <li>
                                <a href="#" class="nav-link px-0 bi-person-video2"> <span class="d-none d-sm-inline">Histórico de Clientes</span></a>
                            </li>
                            <li>
                                <a href="#" class="nav-link px-0 bi-basket"> <span class="d-none d-sm-inline">Controle de Estoque</span></a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#submenu4" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
                            <i class="fs-4 bi-tools"></i> <span class="ms-1 d-none d-sm-inline">Equipamentos</span>
                        </a>
                        <ul class="collapse nav flex-column ms-1" id="submenu4" data-bs-parent="#menu">
                            <li class="w-100">
                                <a href="#" class="nav-link px-0 bi-wrench-adjustable-circle"> <span class="d-none d-sm-inline">Novo Equipamento</span></a>
                            </li>
                            <li>
                                <a href="#" class="nav-link px-0 bi-gear"> <span class="d-none d-sm-inline">Lista de Equipamentos</span></a>
                            </li>
                        </ul>
                    </li>

                </ul>
                <hr>
                <div class="dropdown pb-4">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/assets/icons/person-fill.svg" alt="hugenerd" width="20" height="20" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1"> @User.Identity.Name </span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="dropdown-item sidebar-ul">
                                    <a class="nav-link" asp-area="" asp-controller="Funcionarios" asp-action="Index">Gerenciar Funcionários</a>
                                </li>

                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                            }

                        }
                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                            <li class="nav-item sidebar-ul">
                                <a class="nav-link" asp-area="" asp-controller="Funcionarios" asp-action="Logout">Sair</a>
                            </li>
                            }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-6 py-3 container-fluid" >
            <div class="table-bg" style="max-height: 100vh; overflow:auto;">
                <h3>Cadastrar Novo Funcionário</h3>
                <div>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">

                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Enum_sexo" class="control-label">Sexo</label>
                            <select asp-for="Enum_sexo" class="form-control" asp-items="Html.GetEnumSelectList<Enum_sexo>()"></select>
                            <span asp-validation-for="Enum_sexo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataNascimento" class="control-label">Data de Nascimento</label>
                            <input asp-for="DataNascimento" class="form-control" type="date" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Funcional" class="control-label"></label>
                            <input asp-for="Funcional" class="form-control" />
                            <span asp-validation-for="Funcional" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Senha" class="control-label"></label>
                            <input asp-for="Senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PermissaoId" class="control-label">Tipo de usuário</label>
                            <select asp-for="PermissaoId" class="form-control" asp-items="ViewBag.Permissao"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="PapelId" class="control-label">Área de atuação</label>
                            <select asp-for="PapelId" class="form-control" asp-items="ViewBag.Papel"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataAdmissao" class="control-label">Data de Admissão</label>
                            <input asp-for="DataAdmissao" class="form-control" />
                            <span asp-validation-for="DataAdmissao" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Endereco.Logradouro" class="control-label"></label>
                            <input asp-for="Endereco.Logradouro" class="form-control" />
                            <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Numero" class="control-label">Número</label>
                            <input asp-for="Endereco.Numero" class="form-control" />
                            <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Bairro" class="control-label"></label>
                            <input asp-for="Endereco.Bairro" class="form-control" />
                            <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Cidade" class="control-label"></label>
                            <input asp-for="Endereco.Cidade" class="form-control" />
                            <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Complemento" class="control-label"></label>
                            <input asp-for="Endereco.Complemento" class="form-control" />
                            <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Estado" class="control-label"></label>
                            <input asp-for="Endereco.Estado" class="form-control" />
                            <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Pais" class="control-label">País</label>
                            <input asp-for="Endereco.Pais" class="form-control" />
                            <span asp-validation-for="Endereco.Pais" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco.Cep" class="control-label"></label>
                            <input asp-for="Endereco.Cep" class="form-control" />
                            <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <a class="btn btn-custom-secondary" asp-action="Index">Voltar</a>
                            <input class="btn btn-custom-primary" type="submit" value="Criar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
