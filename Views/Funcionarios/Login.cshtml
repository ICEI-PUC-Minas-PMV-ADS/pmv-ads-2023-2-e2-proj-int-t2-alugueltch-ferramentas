@model MVC.Models.Funcionario

@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="container d-flex flex-column justify-content-center align-content-center vh-100">
    <div class="row responsive-container">
        <div class="row col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4 align-middle h-100 login-container rounded-2 p-2 text-center px-2 py-5">

            <img src="~/assets/img/alugueltechlogo.svg" class="mb-3 max-width-300" alt="aluguel tech logo">

            <form asp-action="Login" class="d-flex flex-column gap-3 align-self-center m-auto text-start col-md-10 col-lg-10">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Funcional" class="control-label"></label>
                    <input asp-for="Funcional" class="form-control" />
                    <span asp-validation-for="Funcional" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group align-self-center mt-3">
                    <input type="submit" class="btn btn-custom-primary" value="Acessar" />
                </div>

            </form>
            <h3>@ViewBag.Message</h3>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
