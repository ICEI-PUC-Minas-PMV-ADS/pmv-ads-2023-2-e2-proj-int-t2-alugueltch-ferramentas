@model IEnumerable<MVC.Models.Orcamento>

@{
    ViewData["Title"] = "Index";

}

<link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />

<div class="container-fluid position-fixed">
    <div class="row flex-nowrap">
        @Html.Partial("_SidebarComponent")

        <div class="col py-3">
            <h3 class="table-bg text-center">Visualização de Aluguéis</h3>
            <div class="d-flex flex-column table-bg align-items-end gap-5">
                <a class="btn btn-custom-primary" asp-action="Create">Criar novo</a>
                <table class="table">
                    <thead class="bg-yellow">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)

                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataOrcamento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataValidade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClienteCpfNavigation.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ValorTotal)
                            <th>

                            </th>
                            <th>
                            <th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataOrcamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataValidade)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClienteCpfNavigation.Nome)
                                </td>
                                <td>

                                    @Html.DisplayFor(modelItem => item.ValorTotal)
                                </td>
                                <td>
                                <td class="table-actions d-flex gap-2">
                                    <a href="@Url.Action("Edit", new { id =item.Id, ClienteCpf = item.ClienteCpfNavigation.Cpf,fcod = item.FerramentaCodigoNavigation.Codigo })" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id =item.Id, ClienteCpf = item.ClienteCpfNavigation.Cpf,fcod = item.FerramentaCodigoNavigation.Codigo  })" title="Detalhes">
                                        <i class="bi bi-info-circle"></i>
                                    </a>

                                    <a href="@Url.Action("Delete", new { id =item.Id, ClienteCpf = item.ClienteCpfNavigation.Cpf,fcod = item.FerramentaCodigoNavigation.Codigo  })" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>